pipeline{
   
    agent any
    
    environment {
        DOCKERHUB_CREDENTIALS=credientials('docker-hub-credentials')
    }
        
    stages {
        stage('Clone du repository') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'docker build -t atos06/ipiformation .'
            }
        }
    }
}
